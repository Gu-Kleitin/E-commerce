<h1>Gerenciar Categorias</h1>

<div class="category-management">
    <div class="category-form">
        <h2>Criar Nova Categoria</h2>
        <form action="/seller/categories/add" method="POST">
            <div class="form-group">
                <label for="nome">Nome da Categoria:</label>
                <input type="text" id="nome" name="nome" required>
            </div>
            <div class="form-group">
                <label for="mae_id">Categoria MÃ£e (opcional):</label>
                <select id="mae_id" name="mae_id">
                    <option value="">Nenhuma</option>
                    {{#each categorias}}
                        <option value="{{this.id}}">{{this.nome}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="button-primary">Criar Categoria</button>
        </form>
    </div>

    <div class="category-list">
        <h2>Categorias Existentes</h2>
        <ul>
            {{#each categorias}}
                <li>{{this.nome}} {{#if this.mae_id}} (Sub-categoria de {{this.mae_id}}) {{/if}}</li>
            {{/each}}
        </ul>
    </div>
</div>
